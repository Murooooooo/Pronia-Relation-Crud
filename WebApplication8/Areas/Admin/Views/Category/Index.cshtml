@model List<Category>

<a class="btn btn-success" asp-action="create">Create</a>
<table class="table table-dark">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>

                <td>@item.Name</td>
                <td>
                    <a asp-controller="category" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <a asp-controller="category" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }

    </tbody>
</table>